<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/medicalDataCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    custom:cardBackgroundColor="@color/trans_white"
    custom:cardCornerRadius="5dp"
    custom:cardElevation="3dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/logo_yellow_box"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kiddoCareLogoHeartColor"
        android:padding="5dp"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5dp"
          android:text="Medical Data:"
          android:textSize="@dimen/text_size_large"
          android:textStyle="bold|italic"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
      <TextView
          android:id="@+id/et_flu_shot_date_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Flu Shot Date:"
          android:textSize="18sp"
          />

      <TextView
          android:id="@+id/et_flu_shot_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_weight="1"
          android:clickable="true"
          android:gravity="end"
          android:hint="@string/hint_date"
          android:onClick="pickDate"
          android:textSize="18sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
      <TextView
          android:id="@+id/et_immunization_date_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Immunization Date:"
          android:textSize="18sp"
          />

      <TextView
          android:id="@+id/et_immunization_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_weight="1"
          android:clickable="true"
          android:gravity="end"
          android:hint="@string/hint_date"
          android:onClick="pickDate"
          android:textSize="18sp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >

      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@android:drawable/ic_menu_camera"
          />

      <ImageView
          android:id="@+id/iv_shot_record"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:src="@mipmap/ic_launcher_new"
          />
    </LinearLayout>
  </LinearLayout>
</androidx.cardview.widget.CardView>